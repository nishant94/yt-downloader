{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": ["dom", "es2022"],
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true
  },
  "compileOnSave": true,
  "exclude": ["node_modules"],
  "include": ["**/**/*.ts"]
}
